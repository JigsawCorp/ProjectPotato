<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:MultipleChoicePicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsEditText
            android:id="@+id/fragment_edit_program_workout_edit_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:description="@string/empty_program_name_filler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Workout Name"/>

        <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsMultipleChoicePicker
            android:id="@+id/fragment_edit_program_workout_multiple_choice_body_parts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_edit_program_workout_edit_text_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            MultipleChoicePicker:title="Body Parts Trained"/>


        <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsEditText
            android:id="@+id/fragment_edit_program_workout_edit_text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:description="@string/empty_program_name_filler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_edit_program_workout_multiple_choice_body_parts"
            app:title="Workout Description"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
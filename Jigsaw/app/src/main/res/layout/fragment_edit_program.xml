<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:RadioButtonList="http://schemas.android.com/apk/res-auto"
    xmlns:Switch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Program Name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_create_program_toolbar" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Ex: Starting Strength"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsRadioButtonList
        android:id="@+id/fragment_edit_program_RadioButtonList_training_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        RadioButtonList:title="Training Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsRadioButtonList
        android:id="@+id/fragment_edit_program_RadioButtonList_DaysPerWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_edit_program_RadioButtonList_training_type"
        RadioButtonList:title="Days Per Week"
        />

    <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsRadioButtonList
        android:id="@+id/fragment_edit_program_RadioButtonList_program_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_edit_program_RadioButtonList_DaysPerWeek"
        RadioButtonList:title="Program Length"/>

    <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsSwitch
        android:id="@+id/fragment_edit_program_is_day_based_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:title="Numerical Day Based"
        app:description="Program workouts will be on Day 1, Day 2, rather than Monday or Tuesday."
        app:layout_constraintTop_toBottomOf="@id/fragment_edit_program_RadioButtonList_program_length"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.jigsawcorp.android.jigsaw.View.CompoundViews.SettingsEditText
        android:id="@+id/fragment_edit_program_edit_text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:description="Enter a description..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_edit_program_is_day_based_switch"
        app:title="Program Description" />

</android.support.constraint.ConstraintLayout>